<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.main.detail.single.SingleDetailFragment">

    <ImageView
        android:id="@+id/iv_singledetail_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_singledetail_title"
        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/paddingLayout"
        android:paddingEnd="@dimen/paddingLayout"
        android:paddingTop="@dimen/paddingLayout"
        tools:text="Testing" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_singledetail_subtitle"
        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/paddingLayout"
        android:paddingEnd="@dimen/paddingLayout"
        android:paddingTop="@dimen/paddingLayout"
        tools:text="Testing" />

</LinearLayout>